AddDefaultCharset utf-8

RewriteEngine on
#RewriteCond %{REQUEST_URI} !(.*)/$
#RewriteCond %{REQUEST_FILENAME} !-f
#RewriteCond %{REQUEST_FILENAME} !-d

# убирает www
RewriteCond %{HTTP_HOST} !^qp-kuhni\.ru$ [NC]
RewriteRule ^(.*)$ https://qp-kuhni.ru/$1 [L,R=301]

#RewriteCond %{HTTP_REQUEST} ^GET\ .*/index\.(php|html)\ HTTP
#RewriteRule ^(.*)index\.(php|html)$ /$1 [r=301,L]

# убирает / в конце url
RewriteCond %{HTTP_HOST} !^qp-kuhni\.ru(/)$ [NC]
RewriteRule ^(.*)(/)$ https://qp-kuhni.ru/$1 [L,R=301]


RewriteCond %{HTTP:X-Forwarded-Proto} !https
RewriteCond %{REQUEST_URI} !^/sitemap\.xml$ [NC]
RewriteRule ^ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301,NE]

RewriteCond %{REQUEST_URI} /kitchen
RewriteCond %{QUERY_STRING} !(.*)
RewriteRule ^(.*)$ https://qp-kuhni.ru/gotovye-kuhni [R=301,L]


# не позволять httpd отдавать файлы, начинающиеся с точки (.htaccess, .svn, .git и прочие)
RedirectMatch 403 /\..*$
# если директория или файл существуют, использовать их напрямую
#RewriteCond %{REQUEST_FILENAME} robot.txt$ [NC]
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
# иначе отправлять запрос на файл index.php
RewriteRule . index.php

